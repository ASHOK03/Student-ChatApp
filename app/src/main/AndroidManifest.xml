<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chatapp.android.studentchat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chatimag"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chatimag"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.chatapp.android.studentchat.MainActivity">

        </activity>
        <activity android:name="com.chatapp.android.studentchat.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>